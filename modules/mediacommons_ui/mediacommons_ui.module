function mediacommons_ui_init() {
  
  $path_is_admin = path_is_admin(current_path());
  
  if ($path_is_admin) {
    global $user;
    
    $menu_object = menu_get_object();
    
    $user->contribute = array(
      'clusters_can_contribute' => mediacommons_ui_clusters_user_can_contribute(),
      'contributed_piece_can_contribute' => mediacommons_ui_additional_authors(),        
    );
    
    if (isset($menu_object)) {
      
      $user->contribute += array(
        'current_nid' => $menu_object->nid,
        'current_uid' => $menu_object->uid,
        'current_title' => $menu_object->title,
        'type' => $menu_object->type,
        'path_is_admin' => $path_is_admin,
      );
      
      /** primary author */
      if ($user->uid == $menu_object->uid) {
        $user->contribute += array(
          'contributor' => TRUE,
          'role' => 'primary author',
        );
      }
      /** admin, additional author or no privileges */
      else {
        /** Check if user is admin or an additional author **/
        if (in_array('administrator', $user->roles)) {
          $user->contribute += array(
            'contributor' => TRUE,
            'role' => 'administrator',
          );
        }
        else if (in_array($user->contribute['current_nid'], $user->contribute['contributed_piece_can_contribute'])) {
          $user->contribute += array(
            'contributor' => TRUE,
            'role' => 'additional author',
          );
        }
        else {
          $user->contribute += array(
            'contributor' => FALSE,
            'role' => 'no-privilege',
          );
        }
      }
    }
  }
}

